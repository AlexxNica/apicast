#!/usr/bin/env bash

mkdir -p /tmp/.s2i

if [[ -n "${GIT_BRANCH}" && -z "${GIT_TAG}" ]]; then
  IMAGE_EXPIRES_IN="1w"
  echo "This image is going to have just ${IMAGE_EXPIRES_IN} expiration."
fi

cat > /tmp/.s2i/image_metadata.json << JSON
{
  "labels": [
    {"quay.expires-in": "${IMAGE_EXPIRES_IN:-}"}
  ]
}
JSON

exec "${STI_SCRIPTS_PATH:-/usr/libexec/s2i}/$(basename $0)"
